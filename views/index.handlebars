<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>EAT DA BURGER</h1>
        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-xs-9 text-center">
                    <pre>
                    {{this.id}}. {{this.burger_name}}
                </pre>
                </div>
                <div class="col-xs-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default">DEVOUR IT</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-xs-6 text-center" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
                <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>

<div class="row">
  <div class="col s12">
    <form method="POST" action="/burgers/create">
      <input type="text" id="name" name="burger_name" value="" placeholder="Place burger order here">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>
</div>

